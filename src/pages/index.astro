---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Jurnal Perjalanan Membangun SaaS">
	<main class="flex-grow">
		<h1 class="text-3xl font-bold text-red-600">Jurnal SaaS</h1>
		<div class="font-sans">
			<h1 class="text-3xl font-bold">Bold Urbanist Heading</h1>
			<p class="font-thin">This is thin (100) Urbanist text.</p>
			<p class="font-light">This is light (300) Urbanist text.</p>
			<p class="font-normal">This is regular (400) Urbanist text.</p>
			<p class="font-medium">This is medium (500) Urbanist text.</p>
			<p class="font-semibold">This is semi-bold (600) Urbanist text.</p>
			<p class="font-extrabold">This is extra-bold (800) Urbanist text.</p>
			<p class="font-black">This is black (900) Urbanist text.</p>
		  </div>
	</main>
	<footer class="flex flex-col sm:flex-row items-center gap-3">
		<div class="flex-grow font-medium">{new Date().getFullYear()} - Jurnal SaaS oleh <a href="https://x.com/DevkageOnline" target="_blank" class="underline">Bonski</a></div>
		<div class="rounded bg-yellow-500 hover:bg-yellow-400 active:bg-yellow-200 p-2 flex gap-2">
			<a href="https://saweria.co/bonskinho" target="_blank">Dukung melalui Saweria</a>
			<img src="capy_happy.svg" class="w-8 h-auto" alt="saweria-logo" />
		</div>
	</footer>
</Layout>